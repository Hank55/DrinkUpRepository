@model DrinkUpProject.Models.ViewModels.SearchVM
<!--Search container-->
<div class="SearchForm">
    <form asp-controller="Guest" asp-action="index">
        <input class="form" asp-for="@Model.SearchItem" />
        <input class="btn btn-outline-primary" type="submit" name="SubmitButton" value="Search" />
        <br />
        <input asp-for="@Model.ParamUrl" type="radio" name="SearchParameter" value="Drink" checked> Drink
        <input asp-for="@Model.ParamUrl" type="radio" name="SearchParameter" value="Ingredient">Ingredient<br>
        <br />
    </form>
    <form asp-controller="Guest" asp-action="RandomDrink">
        <strong>Looking for a drink?</strong>
        <br />
        <input class="btn btn-outline-primary" type="submit" name="RandomButton" value="Serve A Drink" />
    </form>
</div>

    
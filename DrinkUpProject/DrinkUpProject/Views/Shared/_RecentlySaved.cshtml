@model DrinkUpProject.Models.ViewModels.UserHomeVM

<div id="recentlySavedBox">
    @if (Model.RecentlySaved != null)
    {
        <h5>Recenty Saved Recipes</h5>
        @foreach (var item in Model.RecentlySaved)
        {
            <div class="recentlySavedPosts">
                <a asp-action="Recipe" asp-controller="User" asp-route-id="@item.RecipeId">
                    <div>
                        <span>@item.DrinkName</span>
                        <img src="@item.ImgUrl" />
                    </div>
                </a>
            </div>
        }
    }
</div>
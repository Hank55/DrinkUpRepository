@model DrinkUpProject.Models.ViewModels.HomeCreateUserVM

<!DOCTYPE html>
<html>
<head>
    <title>Create User</title>
</head>
<body>
    <form asp-controller="Home" asp-action="CreateUser">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
        <br />
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>

        <label asp-for="FavoriteDrink"></label>
        <input asp-for="FavoriteDrink" />
        <span asp-validation-for="FavoriteDrink"></span>
        <br />
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>

        <label asp-for="ReEnterPassword"></label>
        <input asp-for="ReEnterPassword" />
        <span asp-validation-for="ReEnterPassword"></span>
        <br />
        <input type="submit" value="Create User" />

        <input type="submit" value="Cancel" />

    </form>

</body>
</html>
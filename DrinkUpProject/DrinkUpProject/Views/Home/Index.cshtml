@model DrinkUpProject.Models.ViewModels.HomeIndexVM
<div class="all">
    <div id="LogIn">
        <h1>Welcome & Log In</h1>

        <form>
            <label asp-for="LogInForm.UserName"></label><br />
            <input asp-for="LogInForm.UserName" /><br />
            <label asp-for="LogInForm.Password"></label><br />
            <input asp-for="LogInForm.Password" /><br />
            <input type="submit" class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" value="Log in" /><br />
            <input type="submit" class="btn btn-outline-primary" asp-controller="Home" asp-action="CreateUser" value="Create new user" />
        </form>
    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/hc9b1a1521853096.jpg" alt="First slide" style="width:80%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/x03td31521761009.jpg" alt="Second slide" style="width:80%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/squyyq1439907312.jpg" alt="Third slide" style="width:80%">
            </div>
        </div>
    </div>

    <div>
        @await Html.PartialAsync("~/Views/Shared/_SearchBox.cshtml", Model.SearchForm)
    </div>

</div>

        





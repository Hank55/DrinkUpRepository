@model DrinkUpProject.Models.ViewModels.HomeIndexVM
    <div class="all">
        <div id="LogIn">
            <h1>Welcome & Log In</h1>

            <form>
                <label asp-for="LogInForm.UserName"></label><br />
                <input asp-for="LogInForm.UserName" /><br />
                <label asp-for="LogInForm.Password"></label><br />
                <input asp-for="LogInForm.Password" /><br />
                <input type="submit" asp-controller="Home" asp-action="Index" value="Log in" /><br />
                <input type="submit" asp-controller="Home" asp-action="CreateUser" value="Create new user" />
            </form>
        </div>

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/hc9b1a1521853096.jpg" alt="First slide" style="width:80%">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/x03td31521761009.jpg" alt="Second slide" style="width:80%">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/squyyq1439907312.jpg" alt="Third slide" style="width:80%">
                </div>
            </div>
        </div>



        <!--Search container-->
        <form asp-controller="home" asp-action="index">
            <input class="form" asp-for="@Model.SearchItem" />
            <input class="Button" type="submit" name="SubmitButton" value="Search" />
            <br />
            <input asp-for="@Model.ParamUrl" type="radio" name="SearchParameter" value="Drink" checked> Drink
            <input asp-for="@Model.ParamUrl" type="radio" name="SearchParameter" value="Ingredient">Ingredient<br>

            <br />
            <input class="Button" type="submit" name="RandomButton" value="Random" />
        </form>
    </div>





@model DrinkUpProject.Models.ViewModels.GuestIndexVM
<div class="all">
    <div class="LogIn">
        <h1>Welcome</h1>
        <form asp-controller="Account" asp-action="LogIn" method="post">
            <label style="font-size:25px" asp-for="LogInForm.UserName"></label><br />
            <input asp-for="LogInForm.UserName" /><br />
            <span style="color:red" asp-validation-for="LogInForm.UserName"></span><br />
            <label style="font-size:25px" asp-for="LogInForm.Password"></label><br />
            <input asp-for="LogInForm.Password" /><br />
            <span style="color:red" asp-validation-for="LogInForm.Password"></span><br />
            <input type="submit" id="buttonLoggIn" class="btn btn-outline-primary" value="Log in" /><br />
        </form>
        <form asp-controller="Account" asp-action="CreateUser" method="get">
            <input type="submit" id="buttonCreateUser" class="btn btn-outline-primary" value="Create new user" />
        </form>
    </div>
    <img id="SearchShakeDrink"src="~/Imgs/Slogan.png" />
    <br/>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/ojnpz71504793059.jpg" alt="First slide" style="width:85%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/y36z8c1503563911.jpg" alt="Second slide" style="width:85%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/rxtqps1478251029.jpg" alt="Third slide" style="width:85%">
            </div>
        </div>
    </div>
    <div class="SearchForm">
        @await Html.PartialAsync("~/Views/Shared/_SearchBox.cshtml", Model.SearchForm)
    </div>
</div>

        





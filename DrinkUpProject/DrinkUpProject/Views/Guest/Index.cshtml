@model DrinkUpProject.Models.ViewModels.GuestIndexVM
<div class="all">
    <div class="LogIn">
        <h1>Welcome & Log In</h1>

        <form>
            <label asp-for="LogInForm.UserName"></label><br />
            <input asp-for="LogInForm.UserName" /><br />
            <label asp-for="LogInForm.Password"></label><br />
            <input asp-for="LogInForm.Password" /><br />
            <input type="submit" class="btn btn-outline-primary" asp-controller="Account" asp-action="LogIn" method="post" value="Log in" /><br />
            <input type="submit" class="btn btn-outline-primary" asp-controller="Account" asp-action="CreateUser" value="Create new user" />
        </form>
    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/ojnpz71504793059.jpg" alt="First slide" style="width:85%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/y36z8c1503563911.jpg" alt="Second slide" style="width:85%">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thecocktaildb.com/images/media/drink/rxtqps1478251029.jpg" alt="Third slide" style="width:85%">
            </div>
        </div>
    </div>


</div>

        





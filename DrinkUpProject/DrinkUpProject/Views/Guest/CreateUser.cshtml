@model DrinkUpProject.Models.ViewModels.GuestCreateUserVM

<div class="container">
    <h1>Create User</h1>
    <form class="form-control" asp-controller="Guest" asp-action="CreateUser">
        <div class="form-row">
            <div class="col-md-4 mb-3 ">
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3 ">
                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="FavouriteDrink"></label>
                <input class="form-control" asp-for="FavouriteDrink" />
                <span asp-validation-for="FavouriteDrink"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3 ">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="ReEnterPassword"></label>
                <input class="form-control" asp-for="ReEnterPassword" />
                <span asp-validation-for="ReEnterPassword"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3 ">
                <input class="btn btn-outline-success" type="submit" value="Create User" />
            </div>
    </form>
    <div class="col-md-4 mb-3">
        <form asp-controller="Guest" asp-action="index" method="get">
            <button class="btn btn-outline-danger" type="submit">Cancel</button>
        </form>
    </div>
</div>
</div>

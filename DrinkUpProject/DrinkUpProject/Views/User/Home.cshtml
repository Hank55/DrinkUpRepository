@model DrinkUpProject.Models.ViewModels.UserHomeVM
<div class="all">
    <div class="container-fluid" style="margin-top:180px">
        <div class="row content">
            <div class="col-sm-3">
                <div id="RecentlySavedDrinks" style="text-align:right; margin:auto">
                    @await Html.PartialAsync("~/Views/Shared/_RecentlySaved.cshtml", Model)
                </div>
            </div>
            <div class="col-sm-4 text-left">
                <strong>
                    Drink Fact :)!
                </strong>
                <div id="DrinkFact">
                    <p>@Model.DrinkFact</p>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="well">
                    <div id="searchBox" style="text-align:left; margin:auto">
                        @await Html.PartialAsync("~/Views/Shared/_SearchBox.cshtml", Model.SearchForm)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
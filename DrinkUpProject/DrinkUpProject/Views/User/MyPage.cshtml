@model DrinkUpProject.Models.ViewModels.AccountMyPageVM

<div class="all">
    <div>
        User drinklist
    </div>
    <div>
        <img src="~/Imgs/Logo.png" /><br />

        <h5>My Drinks</h5>

        @if (Model.RecentlySaved != null)
        {

            @foreach (var item in Model.RecentlySaved)
            {
                <div class="drinkList">

                    <div>
                        <span>@item.DrinkName</span>
                        <img src="@item.ImgUrl" />
                    </div>

                </div>
            }
        }


        <p class="Button">Placeholder for fav drink</p>
        <form>
            <input class="Button" type="submit" name="EditProfileButton" value="Edit Profile" />
        </form>
        <form asp-controller="User" asp-action="MyPage">
            <input class="Button" type="submit" name="BackToHomeButton" value="Back To Home" />
        </form>
    </div>
</div>
